<%- include('partials/header') %>

<h2>Edit Expense</h2>

<% if (typeof error !== 'undefined' && error) { %>
    <p class="error">Error: <%= error %></p>
<% } %>


<form action="/expenses/<%= expense.id %>?_method=PUT" method="POST">
    <div>
        <label for="person">Person:</label>
        <input type="text" id="person" name="person" value="<%= expense.person %>" required>
    </div>
    <div>
        <label for="item">Item:</label>
        <input type="text" id="item" name="item" value="<%= expense.item %>" required>
    </div>
    <div>
        <label for="cost">Cost (â‚¬):</label>
        <input type="number" id="cost" name="cost" value="<%= expense.cost %>" step="0.01" required>
    </div>
    <div>
        <button type="submit">Update Expense</button>
        <a href="/report">Cancel</a> <%# Link back to the report page %>
    </div>
</form>

<%- include('partials/footer') %>