<%- include('partials/header') %>

<h2>Add New Expense</h2>

<% if (typeof error !== 'undefined' && error) { %>
    <p class="error">Error: <%= error %></p>
<% } %>


<div class="button-group">
    <p>Quick select payer:</p>
    <% names.forEach(name => { %>
        <button onclick="window.location.href='/?person=<%= encodeURIComponent(name) %>'"><%= name %></button>
    <% }); %>
     <button onclick="window.location.href='/'">Other/Clear</button> <%# Button to clear prefill %>
</div>


<form action="/expenses" method="POST">
    <div>
        <label for="person">Person:</label>
        <input type="text" id="person" name="person" value="<%= prefillPerson %>" required>
    </div>
    <div>
        <label for="item">Item:</label>
        <input type="text" id="item" name="item" required>
    </div>
    <div>
        <label for="cost">Cost (â‚¬):</label>
        <input type="number" id="cost" name="cost" step="0.01" required>
    </div>
    <div>
        <button type="submit">Add Expense</button>
    </div>
</form>


<%- include('partials/footer') %>